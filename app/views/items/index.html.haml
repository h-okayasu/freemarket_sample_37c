.default-container
  -if user_signed_in?
    =render partial: "items/shared/header", locals: {}
  -else
    =render partial: "items/shared/header_signup"
  %main{class: "white", role: "main" }
    %section.top-main-visual
      .top-contents
        .top-main
          .main-title
            %h2  スマホでかんたん
            %h2  フリマアプリ
          .sub-title
            %p  メルカリはスマホカメラからすぐに出品できる
            %p  購入時も安心な独自システムのアプリです
          .top-main-visual-store.clearfix
            %a.pull-left
              %image{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/app-store.svg?2900942513", class: "app"}
            %a.pull-right
              %image{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/google-play.svg?2900942513",  class: "app"}
        %image{src: "//www-mercari-jp.akamaized.net/assets/img/common/jp/top/main_content_pc.png?2900942513", class: "mobile"}
    .pickup-container
      %h2.pickup-head.bold  ピックアップカテゴリー
      %section.item-box-container.clearfix
        %h3.sub-title.bold
          .view-all-link
            ピックアップアイテム
        .items-box-content.clearfix
          =render partial: "items/items", collection: @items, as: "item"
        .view-all
          .view-all-link
            すべての商品を見る
      %section.item-box-container.clearfix
        %h3.sub-title.bold
          =link_to large_category_index_path(large_category_id: 1), class: "view-all-link" do
            レディース新着アイテム
        .items-box-content.clearfix
          =render partial: "items/items", collection: @ladies_items, as: "item"
        .view-all
          =link_to large_category_index_path(large_category_id: 1), class: "view-all-link" do
            すべての商品を見る
  = render partial: 'users/footer_sell_btn'
  =render "items/shared/footer"
