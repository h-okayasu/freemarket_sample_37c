%header.header
  .header-innner
    .clearfix
      %h1.l-left
        = link_to root_path, class: "mercari-home" do
          %image{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?582886128", alt: "mercari", width: "134", height: "36"}
      .form
        %input{type: "search", class: "input-default", name: "keyword", placeholder: "キーワードから探す"}
          = fa_icon 'search', class: 'search-icon'
    .nav-box.clearfix
      %nav.menue-left
        %ul.item-menue
          %li.item-menue__list
            = link_to category_index_path, class: "user-menue__list__content link" do
              .text カテゴリーから探す
            = render '/items/shared/dropdown_category'
          %li.item-menue__list
            %a.link.user-menue__list__content ブランドから探す
            %ul.dropdown_category
              %li.dropdown_category__list
                %h3
                  %a ルイ ヴィトン
              %li
                %h3
                  %a ナイキ
              %li
                %h3
                  %a アディダス
              %li
                %h3
                  %a リーバイス
              %li
                %h3
                  %a その他のブランド
      %nav.menue-right
        %ul.login-nav
          %li
            = link_to new_current_user_session_path, class: "header-btn btn-red" do
              ログイン
          %li
            = link_to users_index_path, class: "header-btn btn-signup" do
              新規会員登録
.flash_wrapper
  .flash_box
    .flash_box--notice
      = flash[:notice]
    .flash_box--alert
      = flash.now[:alert]
    .flash_box--info
      = flash.now[:info]
    .flash_box--warning
      = flash.now[:warning]

